<head>
  <%= stylesheet_link_tag 'questionlist', media: 'all', 'data-turbolinks-track' => true %>

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  <style>

    @import url("//fonts.googleapis.com/css?family=Lato:400,300,100");
    @import url("//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css");
  </style>

</head>
<div class="col-xs-12">
  <div class="question">
    <div class="card">

      <div class="card-image">
        <a href="#" type="button" class="btn">
          <%=avatar_for(question.user,size: 20)%>
        </a>
      </div>

      <div class="card-modal"></div>

      <div class="card-info">

        <div class="name">
          <h3> <%= question.user.name %></h3>
        </div>

        <div class="social-network">
          <a href="#" class="icon youtube">
            <i class="fa fa-youtube"></i>
          </a>
          <a href="#" class="icon twitter">
            <i class="fa fa-twitter"></i>
          </a>
          <a href="#" class="icon facebook">
            <i class="fa fa-facebook"></i>
          </a>
        </div>

        <hr>

        <div class="content">
          <p><b><%= question.title %></b></p>
          <p>

            <b>Info:</b>
            <%= question.content %>
          </p>
          <%if can? :destroy,question%>
              <p><b><%= link_to "Delete", question, method: :delete, data: {confirm: "Are you sure?"}%></b>
                <b><%= link_to 'Show', question ,params[id: question.id]%></b></p>
          <%end%>
          <p><b><%= link_to question.like_string(current_user.id,question.id), question_like_path(question), remote:true,method: :post ,id: "like_#{question.id}" %>
                </b>

            <b><%= link_to('follow', question_follow_path(question), remote:true,method: :post) %></b></p>
        </div>
      </div>
    </div>
  </div>

</div>


<%= javascript_include_tag 'questionlist', 'data-turbolinks-track' => true %>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script type="text/javascript">

</script>